{
  "name": "gamecity-microservice",
  "version": "1.0.0",
  "description": "game micro service struct",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch '**/*.ts' --exec ts-node index.ts",
    "build":"tsc -p tsconfig.json",
    "test": "nyc mocha"
  },
  "nyc": {
    "include": [
      "room/**/*.ts",
      "room/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "repository": "https://github.com/linyngfly/gamecity-microservice.git",
  "author": "linyngfly <linyngfly@163.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@colyseus/monitor": "^0.1.11",
    "colyseus": "^0.9.33",
    "colyseus.js": "^0.10.4",
    "express": "^4.16.4",
    "nodemon": "^1.18.10"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.9.6",
    "@types/redis": "^2.8.10",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^5.2.6",
    "browserify": "^14.4.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^6.1.2",
    "nyc": "^13.3.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  }
}
